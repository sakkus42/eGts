<!DOCTYPE html>
<html lang="tr">
<head>
  <!-- Basic -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <!-- Mobile Metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- Site Metas -->
  <meta name="keywords" content="" />
  <meta name="description" content="" />
  <meta name="author" content="" />
  <link rel="shortcut icon" href="images/favicon.png" type="image/x-icon">

  <title>E-GTS Giriş</title>


  <!-- bootstrap core css -->
  <link rel="stylesheet" type="text/css" href="css/bootstrap.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <!--owl slider stylesheet -->
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />

  <!-- font awesome style -->
  <link href="css/font-awesome.min.css" rel="stylesheet" />

  <!-- Custom styles for this template -->
  <link href="css/style.css" rel="stylesheet" />
  <!-- responsive style -->
  <link href="css/responsive.css" rel="stylesheet" />
  <style>
    .form-popupSign label,
    .form-popup label {
      background-color: #219C90;
    }
    .login-container {
      display: flex;
      align-items: center ;
      flex-direction: column;
    }
    .login-info {
      display: flex;
      flex-direction: column;
      align-items:center;
      margin: 10px;
      width: 100%;
    }
    .nameSirname{
      display: grid;
      grid-template-columns: 1fr 0.75fr;
      grid-column-gap: 20px;
    }

    
  </style>
</head>
<body>
    <div class="hero_area">
        <!-- header section strats -->
      <%- include('utilsEjs/headerSection') %>
      <section class="shop_section layout_padding" style="padding: 10px;">
        <div class="login-container">
          <div class="login-info">
            <h2>Merhaba,</h2>
            <span>
              <% if (typeof confirm !== 'undefined') { %>
                <%= confirm %>
                <% } else { %>
                  Sayfamıza giriş yapabilirsiniz yada üye olabilirsiniz
              <% } %>
            </span>
          </div>
          <div class="form-popup" id="<%= typeof errorE !== 'undefined' || typeof errorP !== 'undefined' ? "myFormSign" :  "myForm"%>"">
            <form action="/user/login" method="post" class="form-container">
              <h1>Giriş Yap</h1>
          
              <label for="email"><b>E-Posta</b></label>
              <input type="text" id="email" placeholder="E-Posta'nızı Giriniz" name="email" required>

              <label for="psw"><b>Şifre</b></label>
              <input type="password" id="password" placeholder="Şifrenizi Giriniz" name="psw" required>
              <% if (typeof message !== 'undefined') { %>
                <div class="message">
                  <span style="opacity: 0.5; color: rgba(255, 0, 0, 0.833);"> <%= message %> </span>
                </div>
              <% } %>
              <button type="submit" class="btn">Giriş Yap</button>
              <button type="button" class="btn clickBtn" id="signUp">Üye Ol</button>
            </form>
          </div>
          <div class="form-popup" id="<%= (typeof errorE !== 'undefined' || typeof errorP !== 'undefined') ? 'myForm' : 'myFormSign' %>">
            <form action="/user/register" method="post" class="form-container">
              <h1>Üye Ol</h1>
              
              <label for="email"><b>E-Posta</b></label>
              <input type="text" id="email1"  
              placeholder="E-Posta'nızı Giriniz" 
              name="email" 
              value="<%= (typeof user !== 'undefined' && user.email) || '' %>"
              onblur="checkEmail()"
              required>
              <p style="color: red;" id="emailErr">Geçersiz e-posta</p>
              <% if (typeof errorE !== 'undefined') { %>
                  <p id='errorE' style="color: red;"><%= errorE %></p>
              <% } %>
              
              
              <label for="phone"><b>Telefon Numarası</b></label>
              <input 
                type="tel" id="phone" name="phone"  
                placeholder="Telefon Numaranızı Giriniz" 
                value="<%= (typeof errorP !== 'undefined') ? '' : ((typeof user !== 'undefined' && user.phone) || '') %>" 
                onblur="checkPhone()"
                required
              >
              <p style="color: red;" id="phoenErr">Geçersiz telefon numarası</p>
              <% if (typeof errorP !== 'undefined') { %>
                <p id='errorP' style="color: red;"><%= errorP %></p>
              <% } %>
          
              <div class="nameSurname">
                <div>
                  <label for="name"><b>Ad</b></label>
                  <label for="surname"><b>Soyad</b></label>
                </div>
                <div>
                </div>
                <input type="text" id="name"  placeholder="Ad" name="name" value="<%= (typeof user !== 'undefined' && user.name) || '' %>" required>
                <input type="text" id="sirname"  placeholder="Soyad" name="sirname" value="<%= (typeof user !== 'undefined' && user.sirname) || '' %>" required>
              </div>
              
              <label for="psw"><b>Şifre</b></label>
              <input type="password" id="psw1" placeholder="Şifrenizi Giriniz" value="" name="psw" required>
              <p id="passwordError" style="color: red;"></p>
          
              <button type="submit" class="btn">Üye Ol</button>
              <button type="button" class="btn clickBtn" id="login">Giriş Yap</button>
            </form>
          </div>
          
          
        </div>
        </section>
        <%- include('utilsEjs/footer') %>
        <script>
        </script>
      <%- include('utilsEjs/scriptPath') %>
</body>
</html>